<Window x:Class="WPFTask2._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTask2._1"
        xmlns:vm="clr-namespace:WPFTask2._1.ViewModels"
        mc:Ignorable="d"
        Title="Задание 2.3" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid Name="MainGrid" Width="{Binding ItemWidth, Mode=OneWayToSource}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Width="300" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="Колода" Grid.Column="0"/>
            <Button Content="Перемешать" Grid.Column="1"/>
        </Grid>

        <WrapPanel Grid.Row="1" Orientation="Horizontal" ItemWidth="{Binding ItemWidth, Mode=OneWay}">

        </WrapPanel>
    </Grid>
</Window>
